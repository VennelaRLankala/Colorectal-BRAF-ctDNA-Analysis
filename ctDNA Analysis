      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "compare_dir = f\"{results}/BRAF_compare\"\n",
        "run(f\"mkdir -p {compare_dir}\")\n",
        "\n",
        "run(\n",
        "    f\"bcftools isec {results}/BRAF_baseline.filtered.vcf \"\n",
        "    f\"{results}/BRAF_post.filtered.vcf -p {compare_dir}\"\n",
        ")\n"
