        "\n",
        "subprocess.run(\n",
        "    f\"fastp --in1 {fastq_dir}/baseline_R1.fastq --in2 {fastq_dir}/baseline_R2.fastq \"\n",
        "    f\"--out1 {fastq_dir}/baseline_trim_R1.fastq --out2 {fastq_dir}/baseline_trim_R2.fastq \"\n",
