      "cell_type": "code",
      "source": [
        "gtf = \"gencode.v45.annotation.gtf\"\n",
        "run(\"wget -q ftp://ftp.ebi.ac.uk/pub/databases/gencode/Gencode_human/release_45/gencode.v45.annotation.gtf.gz\")\n",
        "run(f\"gunzip -f {gtf}.gz\")\n",
        "\n",
        "bed_path = f\"{PROJECT}/BRAF.exons.merged.bed\"\n",
        "cmd = (\n",
        "    f\"awk -v g='{GENE}' 'BEGIN{{FS=\\\"\\\\t\\\"}} \"\n",
        "    f\"$3==\\\"exon\\\" && $0 ~ \\\"gene_name \\\\\\\"\\\"g\\\"\\\\\\\"\\\" \"\n",
        "    f\"{{print $1\\\"\\\\t\\\"($4-1)\\\"\\\\t\\\"$5\\\"\\\\t\\\"g}}' {gtf} | \"\n",
        "    \"sort -k1,1 -k2,2n | bedtools merge -i - -c 4 -o distinct \"\n",
        "    f\"> {bed_path}\"\n",
        ")\n",
        "run(cmd)\n"
      ],
      "metadata": {
        "id": "qM7dSwHFWBG0"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "ref = f\"{PROJECT}/reference/GRCh38.primary_assembly.genome.fa\"\n",
        "bam_dir = f\"{PROJECT}/bam\"\n",
        "\n",
        "run(\n",
        "    f\"bwa mem -t {THREADS} {ref} {fastq_dir}/baseline_trim_R1.fastq {fastq_dir}/baseline_trim_R2.fastq \"\n",
        "    f\"| samtools view -bS -o {bam_dir}/baseline.bam -\"\n",
        ")\n",
        "\n",
        "run(f\"samtools sort -o {bam_dir}/baseline.sorted.bam {bam_dir}/baseline.bam\")\n",
        "run(f\"samtools index {bam_dir}/baseline.sorted.bam\")\n",
        "\n",
        "run(\n",
        "    f\"bwa mem -t {THREADS} {ref} {fastq_dir}/post_trim_R1.fastq {fastq_dir}/post_trim_R2.fastq \"\n",
        "    f\"| samtools view -bS -o {bam_dir}/post.bam -\"\n",
        ")\n",
        "\n",
        "run(f\"samtools sort -o {bam_dir}/post.sorted.bam {bam_dir}/post.bam\")\n",
        "run(f\"samtools index {bam_dir}/post.sorted.bam\")\n"
      ],
      "metadata": {
        "id": "v80vv-VJWE-R"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "results = f\"{PROJECT}/results\"\n",
        "BED = f\"{PROJECT}/BRAF.exons.merged.bed\"\n",
        "\n",
        "run(\n",
        "    f\"freebayes -f {ref} -t {BED} --min-alternate-fraction 0.005 --min-alternate-count 3 \"\n",
        "    f\"{bam_dir}/baseline.sorted.bam > {results}/BRAF_baseline.raw.vcf\"\n",
        ")\n",
        "\n",
        "run(\n",
        "    f\"freebayes -f {ref} -t {BED} --min-alternate-fraction 0.005 --min-alternate-count 3 \"\n",
        "    f\"{bam_dir}/post.sorted.bam > {results}/BRAF_post.raw.vcf\"\n",
        ")\n"
      ],
      "metadata": {
        "id": "jaL409GHWIoL"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "run(f\"bgzip -c {results}/BRAF_baseline.raw.vcf > {results}/BRAF_baseline.raw.vcf.gz\")\n",
        "run(f\"bgzip -c {results}/BRAF_post.raw.vcf > {results}/BRAF_post.raw.vcf.gz\")\n",
        "\n",
        "run(f\"tabix -p vcf {results}/BRAF_baseline.raw.vcf.gz\")\n",
        "run(f\"tabix -p vcf {results}/BRAF_post.raw.vcf.gz\")\n",
        "\n",
        "run(\n",
        "    f\"bcftools norm -f {ref} -m -both {results}/BRAF_baseline.raw.vcf.gz -Oz \"\n",
        "    f\"-o {results}/BRAF_baseline.norm.vcf.gz\"\n",
        ")\n",
        "\n",
        "run(\n",
        "    f\"bcftools norm -f {ref} -m -both {results}/BRAF_post.raw.vcf.gz -Oz \"\n",
        "    f\"-o {results}/BRAF_post.norm.vcf.gz\"\n",
        ")\n",
        "\n",
        "run(\n",
        "    f\"bcftools view -i 'QUAL>20 && INFO/DP>10' {results}/BRAF_baseline.norm.vcf.gz \"\n",
        "    f\"-Ov -o {results}/BRAF_baseline.filtered.vcf\"\n",
        ")\n",
        "\n",
        "run(\n",
        "    f\"bcftools view -i 'QUAL>20 && INFO/DP>10' {results}/BRAF_post.norm.vcf.gz \"\n",
        "    f\"-Ov -o {results}/BRAF_post.filtered.vcf\"\n",
        ")\n"
      ],
      "metadata": {
        "id": "9Zf6pB5dWMUz"
      },
