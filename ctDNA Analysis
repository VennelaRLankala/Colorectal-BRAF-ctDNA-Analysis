        "GENE = \"BRAF\"\n",
        "THREADS = \"2\"\n",
        "\n",
        "os.environ[\"PROJECT\"] = PROJECT\n",
        "os.environ[\"GENE\"] = GENE\n",
        "\n",
        "for d in [\"fastq\",\"reference\",\"bam\",\"qc\",\"logs\",\"results\"]:\n",
        "    os.makedirs(os.path.join(PROJECT, d), exist_ok=True)\n"
      ],
