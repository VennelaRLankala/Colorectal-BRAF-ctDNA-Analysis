      "cell_type": "code",
      "source": [
        "import subprocess, os, time\n",
        "\n",
        "fastq_dir = os.path.join(PROJECT, \"fastq\")\n",
        "os.chdir(fastq_dir)\n",
        "\n",
        "def wget_retry(url):\n",
        "    for i in range(3):\n",
        "        r = subprocess.run(f\"wget -c {url}\", shell=True)\n",
        "        if r.returncode == 0:\n",
        "            return\n",
        "        time.sleep(5)\n",
        "    raise RuntimeError(\"Download failed\")\n",
        "\n",
        "wget_retry(f\"ftp://ftp.sra.ebi.ac.uk/vol1/fastq/SRR139/039/{SRR_BASE}/{SRR_BASE}_1.fastq.gz\")\n",
        "wget_retry(f\"ftp://ftp.sra.ebi.ac.uk/vol1/fastq/SRR139/039/{SRR_BASE}/{SRR_BASE}_2.fastq.gz\")\n",
        "wget_retry(f\"ftp://ftp.sra.ebi.ac.uk/vol1/fastq/SRR139/040/{SRR_POST}/{SRR_POST}_1.fastq.gz\")\n",
        "wget_retry(f\"ftp://ftp.sra.ebi.ac.uk/vol1/fastq/SRR139/040/{SRR_POST}/{SRR_POST}_2.fastq.gz\")\n",
        "\n",
        "subprocess.run(\"gunzip -f *.fastq.gz\", shell=True)\n",
        "\n",
        "subprocess.run(f\"mv {SRR_BASE}_1.fastq baseline_R1.fastq\", shell=True)\n",
        "subprocess.run(f\"mv {SRR_BASE}_2.fastq baseline_R2.fastq\", shell=True)\n",
        "subprocess.run(f\"mv {SRR_POST}_1.fastq post_R1.fastq\", shell=True)\n",
        "subprocess.run(f\"mv {SRR_POST}_2.fastq post_R2.fastq\", shell=True)\n"
      ],
      "metadata": {
        "id": "gHYb1XLNVzcw"
